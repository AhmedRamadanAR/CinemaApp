<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.cinemaapp.SignUpFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.cinemaapp.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_basicFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            app:destination="@id/basicFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_holdFragment"
            app:destination="@id/holdFragment" />
    </fragment>
    <fragment
        android:id="@+id/basicFragment"
        android:name="com.example.cinemaapp.BasicFragment"
        android:label="fragment_basic"
        tools:layout="@layout/fragment_basic" >
        <action
            android:id="@+id/action_basicFragment_to_holdFragment2"
            app:destination="@id/holdFragment" />
        <action
            android:id="@+id/action_basicFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.cinemaapp.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details" >
        <action
            android:id="@+id/action_movieDetailsFragment_to_checkOutFragment"
            app:destination="@id/checkOutFragment" />
        <action
            android:id="@+id/action_movieDetailsFragment_to_basicFragment"
            app:destination="@id/basicFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.cinemaapp.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/ticketsFragment"
        android:name="com.example.cinemaapp.TicketsFragment"
        android:label="fragment_tickets"
        tools:layout="@layout/fragment_tickets" />
    <fragment
        android:id="@+id/holdFragment"
        android:name="com.example.cinemaapp.HoldFragment"
        android:label="fragment_hold"
        tools:layout="@layout/fragment_hold" >
        <action
            android:id="@+id/action_holdFragment_to_comingFragment"
            app:destination="@id/comingFragment" />
    </fragment>
    <fragment
        android:id="@+id/comingFragment"
        android:name="com.example.cinemaapp.ComingFragment"
        android:label="fragment_coming"
        tools:layout="@layout/fragment_coming" />
    <fragment
        android:id="@+id/checkOutFragment"
        android:name="com.example.cinemaapp.CheckOutFragment"
        android:label="fragment_check_out"
        tools:layout="@layout/fragment_check_out" >
        <action
            android:id="@+id/action_checkOutFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashScreen"
        android:name="com.example.cinemaapp.SplashScreen"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_signUpFragment"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/buyTicketSnack"
        android:name="com.example.cinemaapp.BuyTicketSnack"
        android:label="fragment_buy_ticket_snack"
        tools:layout="@layout/fragment_buy_ticket_snack" >
        <action
            android:id="@+id/action_buyTicketSnack_to_paymentCheck"
            app:destination="@id/paymentCheck" />
        <action
            android:id="@+id/action_buyTicketSnack_to_basicFragment"
            app:destination="@id/basicFragment" />
        <action
            android:id="@+id/action_buyTicketSnack_to_loginFragment"
            app:popUpTo="@id/buyTicketSnack"
            app:popUpToInclusive="true"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentCheck"
        android:name="com.example.cinemaapp.PaymentCheck"
        android:label="fragment_payment_check"
        tools:layout="@layout/fragment_payment_check" />
</navigation>