<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signUpFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.cinemaapp.SignUpFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.cinemaapp.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_loginFragment_to_basicFragment"
            app:destination="@id/basicFragment" />
        <action
            android:id="@+id/action_loginFragment_to_holdFragment"
            app:destination="@id/holdFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.cinemaapp.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/basicFragment"
        android:name="com.example.cinemaapp.BasicFragment"
        android:label="fragment_basic"
        tools:layout="@layout/fragment_basic" >
        <action
            android:id="@+id/action_basicFragment_to_movieDetailsFragment2"
            app:destination="@id/movieDetailsFragment" />
        <action
            android:id="@+id/action_basicFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_basicFragment_to_ticketsFragment"
            app:destination="@id/ticketsFragment" />
        <action
            android:id="@+id/action_basicFragment_self"
            app:destination="@id/basicFragment" />
        <action
            android:id="@+id/action_basicFragment_to_favoriteFragment2"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_basicFragment_to_ticketsFragment2"
            app:destination="@id/ticketsFragment" />
        <action
            android:id="@+id/action_basicFragment_to_comingFragment"
            app:destination="@id/comingFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.cinemaapp.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cinemaapp.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.cinemaapp.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favoriteFragment_to_basicFragment"
            app:destination="@id/basicFragment" />
    </fragment>
    <fragment
        android:id="@+id/ticketsFragment"
        android:name="com.example.cinemaapp.TicketsFragment"
        android:label="fragment_tickets"
        tools:layout="@layout/fragment_tickets" />
    <fragment
        android:id="@+id/holdFragment"
        android:name="com.example.cinemaapp.HoldFragment"
        android:label="fragment_hold"
        tools:layout="@layout/fragment_hold" >
        <action
            android:id="@+id/action_holdFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_holdFragment_to_ticketsFragment"
            app:destination="@id/ticketsFragment" />
        <action
            android:id="@+id/action_holdFragment_to_comingFragment"
            app:destination="@id/comingFragment" />
    </fragment>
    <fragment
        android:id="@+id/comingFragment"
        android:name="com.example.cinemaapp.ComingFragment"
        android:label="fragment_coming"
        tools:layout="@layout/fragment_coming" >
        <action
            android:id="@+id/action_comingFragment_to_holdFragment"
            app:destination="@id/holdFragment" />
        <action
            android:id="@+id/action_comingFragment_to_basicFragment"
            app:destination="@id/basicFragment" />
        <action
            android:id="@+id/action_comingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>